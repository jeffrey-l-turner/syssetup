# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# This configuration works with prettier also
# see: editorconfig.org, prettier.io/docs/en/api.html#prettierresolveconfigfilepath-options, github.com/davidtheclark/cosmiconfig

root = true

[*]

# We recommend you to keep these unchanged.
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[package.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true

[*.js]
quote_type = single
